{
  "name": "warp-core",
  "version": "0.0.2",
  "description": "Backend service for online multiplayer game engine",
  "author": "Space Game Engine",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/Space-Game-Engine/Warp-Core",
  "bugs": {
    "url": "https://github.com/Space-Game-Engine/Warp-Core/issues"
  },
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:ci": "jest --ci --reporters='github-actions'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run typeorm:test_migrations && NODE_ENV=test jest --config test/e2e/jest-e2e.json",
    "test:e2e-ci": "npm run typeorm:test_migrations && NODE_ENV=test jest --config test/e2e/jest-e2e.json --ci --reporters='github-actions'",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:test_migrations": "test/prepare_database.sh",
    "install-game": "nestjs-command install"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "better-sqlite3": "^8.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cli-progress": "^3.12.0",
    "config": "^3.3.9",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "js-yaml": "^4.1.0",
    "luxon": "^3.4.4",
    "nestjs-cls": "^3.6.0",
    "nestjs-command": "^3.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/cli-progress": "^3.11.5",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.11",
    "@types/jest-when": "^3.5.5",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.3.7",
    "@types/node": "^20.10.5",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "29.7.0",
    "jest-when": "^3.6.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "roots": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@warp-core/test/(.*)": "<rootDir>../test/$1",
      "@warp-core/(.*)": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>../test/setupTests.ts"
    ]
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "keywords": []
}
